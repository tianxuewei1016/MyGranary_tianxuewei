<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_brand"
    tools:context="com.mygranary_tianxuewei.ui.DetailsActivity">

    <include
        android:id="@+id/titlebar_det"
        layout="@layout/titlebar_det" />

    <com.mygranary_tianxuewei.widget.PullUpToLoadMore
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar_det"
        android:orientation="vertical"
        android:id="@+id/ptlm">

        <com.mygranary_tianxuewei.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>


        </com.mygranary_tianxuewei.widget.MyScrollView>

    </com.mygranary_tianxuewei.widget.PullUpToLoadMore>

</RelativeLayout>
