<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/y30">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="525px">

        <ImageView
            android:id="@+id/iv_pro_hot"
            android:layout_width="match_parent"
            android:layout_height="525px"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20">

            <Button
                android:id="@+id/btn_hot_tag1"
                android:layout_width="135px"
                android:layout_height="60px"
                android:background="@color/homepage_red_line"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_hot_tag2"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_gravity="bottom"
                android:layout_toRightOf="@+id/btn_hot_tag1"
                android:background="@color/white"
                android:textColor="@color/homepage_red_line"
                />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45px">

        <TextView
            android:id="@+id/tv_pro_hot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/ll_price"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="2"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/x50"/>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/homepage_red_line"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qi"
                android:textColor="@color/text_black" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>