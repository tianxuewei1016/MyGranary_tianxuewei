<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/background_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_seek"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tv_shop_writ"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ll_fragment_scan"
        android:layout_toRightOf="@+id/ll_fragment_scan"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        android:tint="@android:color/white" />

    <TextView
        android:id="@+id/tv_shop_writ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_shop_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_shop_writ"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/actionbar_navigation_cart"
        android:tint="@android:color/white" />

</RelativeLayout>