<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mgz_item_icon_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.7"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/mgz_item_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="1111111111111"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mgz_item_category_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mgz_item_desc_txt"
        android:text="11"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mgz_item_category_txt"
        android:layout_toLeftOf="@id/mgz_item_category_txt"
        android:text="--"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mgz_item_category_txt"
        android:layout_toRightOf="@id/mgz_item_category_txt"
        android:text="--"
        android:textColor="@color/white" />

</RelativeLayout>