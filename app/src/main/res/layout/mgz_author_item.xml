<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <com.mygranary_tianxuewei.widget.CircleImage
        android:id="@+id/mgz_author_item_circle_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/brand_logo_empty" />

    <TextView
        android:id="@+id/mgz_author_item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mgz_author_item_circle_image"
        android:textColor="@color/colorBlank" />

    <TextView
        android:id="@+id/mgz_author_item_note_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mgz_author_item_name_txt"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/mgz_author_item_circle_image"
        android:textColor="@color/colorBlank" />

</RelativeLayout>